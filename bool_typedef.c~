#include <stdio.h>

/*Statement to be included in the header files to standarize boolean type*/
enum bool {false, true};
typedef enum bool bool;

/*Main just presented to demonstrate how the header affects the program, run it if you wish.*/
int main (void){
  /*Variable declaration and initialization*/
  bool a,b;
  a=true;
  b=false;

  printf("True=%d\n",a);/*Demonstrates true is 1*/
  printf("False=%d\n",b);/*Demonstrates false is 0*/
  if(a){
    printf("Statement 'a' is true.\n");
  }
  else{
    printf("asdl;ka;sdlk\n");/*Should not be printed*/
  }
  if (b){
    printf("asldhasoidwdj\n");/*Should not be printed*/
  }
  else{
    printf("Statement 'b' is false.\n");
  }
  return 0;
}
